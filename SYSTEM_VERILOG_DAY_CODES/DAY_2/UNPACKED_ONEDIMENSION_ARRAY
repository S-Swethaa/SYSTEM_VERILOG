module unpacked_one_dimension;
  byte stack [8];

  initial begin
    foreach (stack[i]) begin
      stack[i] = $random;
      $display("Assign 0x%0h to index %0d", stack[i], i);
    end

    // Manual display of array contents
    $write("stack = { ");
    foreach (stack[i]) begin
      $write("0x%0h ", stack[i]);
    end
    $display("}");
  end
endmodule

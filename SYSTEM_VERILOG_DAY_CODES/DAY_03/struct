module struct_packed;

  typedef struct packed {
    bit [7:0] intr;
    logic [23:0] addr;
  } sua_t;

  sua_t sua;

  initial begin
    sua.intr = 'hFF;
    sua.addr = 'hABCDEF;

    $display("%0t sua = %h", $time, sua);         
    $display("%0t sua.intr = %h", $time, sua.intr); 
    $display("%0t sua.addr = %h", $time, sua.addr); 
  end

endmodule

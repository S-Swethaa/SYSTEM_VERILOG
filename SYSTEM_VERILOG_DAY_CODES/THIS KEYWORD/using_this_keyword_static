class using_this_keyword;
bit [31:0] data;
int addr;

function static  assign_val(bit [31:0] data,int addr);  //function static
this.addr=addr;
this.data=data;
endfunction
endclass

module thiskeyword;
initial begin
using_this_keyword tk;
tk=new();
tk.assign_val(52,4);
$display("addr=%0d,data=%0d",tk.addr,tk.data);
end
endmodule

o/p:

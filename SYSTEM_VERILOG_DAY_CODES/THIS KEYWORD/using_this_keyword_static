# Loading work.thiskeyword(fast)
run
# addr=4,data=52

//------------------------------------------------------------------------------
beforely mention static function: this keyword usage in the static method is illegal
class using_this_keyword;
bit [31:0] data;
int addr;

static function   assign_val(bit [31:0] data,int addr); //static function
this.addr=addr;
this.data=data;
endfunction
endclass

module thiskeyword;
initial begin
using_this_keyword tk;
tk=new();
tk.assign_val(52,4);
$display("addr=%0d,data=%0d",tk.addr,tk.data);
end
endmodule


module task_example;
int num;
int fac;

task automatic factorial(input int n,output int fact);
fact=1;
if(n<0)begin
$display("undefined number");
fact=0;
end else begin
for(int i=1; i<=n;i++)begin
fact *=i;
end
end
endtask

initial begin
num=$urandom();
factorial(num,fac);
$display("Factorial of %0d is %0d",num,fac);
end
endmodule

O/P:
Loading sv_std.std
# Loading work.task_example(fast)
run
# undefined number
# Factorial of -834229725 is 0


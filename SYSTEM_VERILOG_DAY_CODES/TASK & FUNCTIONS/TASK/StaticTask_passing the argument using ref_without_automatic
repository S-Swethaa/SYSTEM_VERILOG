  module with_static_task;
  int a,b;
  int y;
//a and b must be automatic
  task without_using_automatic(ref int a, b, output int y);
  a=a*b;//static
  y=a;
  endtask
  
  initial begin
  a=7;
  b=8;
 
  without_using_automatic(a,b,y);
  $display("Task_with_static:out=%0d,a=%0d,b=%0d",y,a,b);
  end
  endmodule


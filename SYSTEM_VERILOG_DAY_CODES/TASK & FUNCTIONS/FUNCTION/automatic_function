module automatic_function;

function automatic func_auto_increment( );
static int a;
automatic int b;
int c;

a++;
b++;
c++;
$display("a=%0d,b=%0d,c=%0d",a,b,c);
endfunction

initial begin
$display("AUTOMATIC FUNCTION");
func_auto_increment();
func_auto_increment();
func_auto_increment();
end
endmodule

